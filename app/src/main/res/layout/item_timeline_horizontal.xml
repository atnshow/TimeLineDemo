<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:contentPadding="10dp">

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Random" />

    </android.support.v7.widget.CardView>

    <com.ec.module.timelinemodule.TimelineView
        android:id="@+id/time_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:timeline_line="@color/colorPrimary"
        app:timeline_line_marker_margin="12dp"
        app:timeline_line_orientation="horizontal"
        app:timeline_line_size="2dp"
        app:timeline_marker_in_center="false"
        app:timeline_marker_size="25dp" />

</LinearLayout>